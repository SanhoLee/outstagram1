extend layout/main.pug 
include mixins/picBlock

block potato 
  .home__body
    .home-pics
      each item in pics 
        +picBlock({
          userName:item.username,
          userAvatar:item.userAvatar,
          picUrl:item.picUrl,
          numLiked: item.numLiked,
          id:item.id,
          commentIDs:item.commentIds
        })
    .home__user__info
      .sideArea_thumnail
        img(src="", alt="me Avatar ") 
        span myID 
      .sideArea_stat
        span 게시물 10
        span 팔로워 9
        span 팔로우 14


